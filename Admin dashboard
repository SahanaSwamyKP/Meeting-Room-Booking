  text-align: center;
  background-color: #f8f8f8;
  padding: 10px 0;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10px;
}

button {
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
}



